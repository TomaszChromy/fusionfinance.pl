# FusionFinance.pl - Apache Configuration
# Dla hostingu nazwa.pl

# Włącz rewrite engine
RewriteEngine On
RewriteBase /

# Force HTTPS (odkomentuj na produkcji)
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Remove www (bez www)
# RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
# RewriteRule ^ https://%1%{REQUEST_URI} [L,R=301]

# Obsługa index.html w katalogach - NAJWAŻNIEJSZE
DirectoryIndex index.html

# API Routes - przekieruj do PHP
RewriteRule ^api/rss/?$ /api/rss.php [L,QSA]
RewriteRule ^api/article/?$ /api/article.php [L,QSA]

# Jeśli folder istnieje i ma index.html - serwuj go
RewriteCond %{REQUEST_FILENAME} -d
RewriteCond %{REQUEST_FILENAME}/index.html -f
RewriteRule ^(.+)/$ $1/index.html [L]

# Jeśli plik .html istnieje - serwuj go
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^([^/]+)/?$ $1.html [L]

# Dla podstron typu /gielda/ -> /gielda/index.html
RewriteCond %{REQUEST_URI} ^/([^/]+)/?$
RewriteCond %{DOCUMENT_ROOT}/%1/index.html -f
RewriteRule ^([^/]+)/?$ /$1/index.html [L]

# Kompresja GZIP
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE image/svg+xml
</IfModule>

# Cache statycznych zasobów
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Obrazy - 1 miesiąc
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/webp "access plus 1 month"
    ExpiresByType image/svg+xml "access plus 1 month"
    ExpiresByType image/x-icon "access plus 1 year"
    
    # CSS i JS - 1 tydzień
    ExpiresByType text/css "access plus 1 week"
    ExpiresByType application/javascript "access plus 1 week"
    
    # Fonty - 1 rok
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
    
    # HTML - 1 godzina
    ExpiresByType text/html "access plus 1 hour"
</IfModule>

# Security headers
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Blokuj dostęp do wrażliwych plików
<FilesMatch "\.(env|log|md|yml|yaml|json|lock)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Zezwól na manifest i robots
<FilesMatch "(robots\.txt|sitemap\.xml|site\.webmanifest)$">
    Order allow,deny
    Allow from all
</FilesMatch>

# Niestandardowe strony błędów
ErrorDocument 404 /404.html
ErrorDocument 500 /500.html

# PHP settings dla API
<IfModule mod_php.c>
    php_value max_execution_time 30
    php_value memory_limit 64M
</IfModule>

