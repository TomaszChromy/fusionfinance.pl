// FusionFinance.pl - Prisma Schema
// PostgreSQL on nazwa.pl

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ============= USERS =============
// User model jest zdefiniowany na koniec pliku z pełnymi relacjami

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ============= FAVORITES =============

model Favorite {
  id        String   @id @default(cuid())
  userId    String
  articleId String // RSS article GUID
  title     String
  url       String
  imageUrl  String?
  source    String?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, articleId])
  @@map("favorites")
}

// ============= PRICE ALERTS =============

model PriceAlert {
  id        String   @id @default(cuid())
  userId    String
  symbol    String // e.g., "BTC", "EUR/PLN", "PKO"
  condition String // "above" | "below"
  price     Float
  isActive  Boolean  @default(true)
  triggered Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("price_alerts")
}

// ============= WATCHLIST =============

model WatchlistItem {
  id        String   @id @default(cuid())
  userId    String
  symbol    String
  type      String // "stock" | "crypto" | "forex"
  name      String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, symbol])
  @@map("watchlist")
}

// ============= ANALYTICS =============

model PageView {
  id        String   @id @default(cuid())
  userId    String? // null dla niezalogowanych
  path      String
  title     String?
  referrer  String?
  duration  Int? // czas spędzony w sekundach
  userAgent String?
  createdAt DateTime @default(now())

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([path, createdAt])
  @@index([userId, createdAt])
  @@map("page_views")
}

model ArticleView {
  id          String   @id @default(cuid())
  userId      String?
  articleId   String // RSS article GUID
  title       String
  slug        String
  duration    Int? // czas czytania w sekundach
  scrollDepth Float? // % strony przewinięte
  createdAt   DateTime @default(now())

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([articleId, createdAt])
  @@index([userId, createdAt])
  @@map("article_views")
}

model Event {
  id        String   @id @default(cuid())
  userId    String?
  eventType String // "click", "share", "bookmark", "alert_created"
  eventData Json? // dodatkowe dane zdarzenia
  createdAt DateTime @default(now())

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([eventType, createdAt])
  @@index([userId, createdAt])
  @@map("events")
}

model DailyStats {
  id          String   @id @default(cuid())
  date        DateTime @unique
  totalViews  Int      @default(0)
  totalUsers  Int      @default(0)
  avgDuration Float?
  bounceRate  Float?
  topArticles Json? // JSON array of top articles
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("daily_stats")
}

// ============= ARTICLES (CMS-lite) =============

model Article {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  summary     String   @db.Text
  content     String   @db.Text
  coverImage  String?
  category    String?
  tags        String[]
  source      String?  // optional external source
  publishedAt DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  views       ArticleViewLocal[]

  @@index([publishedAt])
  @@map("articles")
}

model ArticleViewLocal {
  id         String   @id @default(cuid())
  articleId  String
  userId     String?
  duration   Int?
  createdAt  DateTime @default(now())

  article Article @relation(fields: [articleId], references: [id], onDelete: Cascade)
  user    User?   @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([articleId, createdAt])
  @@index([userId, createdAt])
  @@map("article_views_local")
}

// Aktualizacja User aby zawierał relacje do analytics
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String? // For credentials auth
  image         String?
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  accounts     Account[]
  sessions     Session[]
  favorites    Favorite[]
  alerts       PriceAlert[]
  watchlist    WatchlistItem[]
  pageViews    PageView[]
  articleViews ArticleView[]
  events       Event[]
  subscription Subscription?
  billingHistory BillingHistory[]
  apiKeys      ApiKey[]

  @@map("users")
}

// ============= SUBSCRIPTION & BILLING =============

model Subscription {
  id              String   @id @default(cuid())
  userId          String   @unique
  plan            String   // "free", "basic", "pro", "enterprise"
  stripeCustomerId String?
  stripeSubscriptionId String?
  status          String   @default("active") // "active", "canceled", "expired"
  currentPeriodStart DateTime?
  currentPeriodEnd DateTime?
  canceledAt      DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("subscriptions")
}

model BillingHistory {
  id          String   @id @default(cuid())
  userId      String
  stripeInvoiceId String?
  amount      Int      // w groszach
  currency    String   @default("PLN")
  status      String   // "paid", "pending", "failed"
  description String?
  createdAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@map("billing_history")
}

// ============= DEVELOPER API =============

model ApiKey {
  id              String   @id @default(cuid())
  userId          String
  name            String   // np. "My App", "Mobile Client"
  key             String   @unique
  secret          String
  isActive        Boolean  @default(true)
  rateLimit       Int      @default(1000) // requests per day
  requestsToday   Int      @default(0)
  lastRequestAt   DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([key])
  @@index([userId])
  @@map("api_keys")
}

model ApiUsage {
  id          String   @id @default(cuid())
  apiKeyId    String
  endpoint    String   // /api/v1/quotes, /api/v1/markets, etc.
  method      String   // GET, POST, etc.
  statusCode  Int
  responseTime Int      // milliseconds
  error       String?
  createdAt   DateTime @default(now())

  @@index([apiKeyId, createdAt])
  @@index([endpoint])
  @@map("api_usage")
}
